{
  "name": "ai-elearning-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run kill-ports && npm run start-all",
    "dev-frontend-only": "next dev",
    "kill-ports": "pkill -f 'uvicorn' || true && pkill -f 'next dev' || true && sleep 2",
    "start-backend": "cd ../backend && python3 -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "start-all": "concurrently \"npm run start-backend\" \"sleep 5 && next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=__tests__/integration/.*\\.test\\.(ts|tsx)$",
    "test:components": "jest --testPathPattern=components/__tests__/.*\\.test\\.(ts|tsx)$",
    "test:hooks": "jest --testPathPattern=hooks/__tests__/.*\\.test\\.(ts|tsx)$",
    "test:utils": "jest --testPathPattern=lib/__tests__/.*\\.test\\.(ts|tsx)$",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:admin": "playwright test tests/e2e/admin-functionality.spec.ts",
    "test:payments": "playwright test tests/e2e/payment-flows.spec.ts",
    "test:learning": "playwright test tests/e2e/learning-flow.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "playwright test --reporter=html,junit",
    "test:all": "npm run test:ci && npm run test:e2e:ci",
    "test:performance": "playwright test --grep='@performance'",
    "test:accessibility": "playwright test --grep='@accessibility'",
    "playwright:install": "playwright install",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@next-auth/mongodb-adapter": "^1.1.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-slot": "^1.1.7",
    "@sentry/nextjs": "^9.33.0",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "lucide-react": "^0.522.0",
    "next": "14.2.3",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "recharts": "^3.0.0",
    "tailwind-merge": "^2.5.4",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "msw": "^2.4.9",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
